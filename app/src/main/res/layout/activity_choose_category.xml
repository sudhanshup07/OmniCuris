<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseCategoryActivity"
    android:background="@color/dark_background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/category_item_bg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/category_general_knowledge">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_general_knowledge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp" android:id="@+id/cat_gk_iv"/>
        <TextView
            android:text="General Knowledge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cat_gk_tv" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/white" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="9"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cat_gk_iv" android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/category_item_bg"
        app:layout_constraintStart_toStartOf="@+id/category_general_knowledge"
        app:layout_constraintEnd_toEndOf="@+id/category_general_knowledge"
        android:id="@+id/category_science_nature"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/category_general_knowledge">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_science_nature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:id="@+id/cat_science_nature_iv"/>

        <TextView
            android:text="Science : Nature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cat_science_nature_tv" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="17"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cat_science_nature_iv" android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/category_item_bg"
        app:layout_constraintStart_toStartOf="@+id/category_science_nature"
        app:layout_constraintEnd_toEndOf="@+id/category_science_nature"
        android:id="@+id/category_science_computer"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/category_science_nature">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_science_computer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:id="@+id/cat_science_computer_iv"/>
        <TextView
            android:text="Science : Computer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cat_science_computer_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="18"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cat_science_computer_iv"
            android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/category_item_bg"
        android:id="@+id/category_science_maths"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/category_science_computer"
        app:layout_constraintStart_toStartOf="@+id/category_science_computer"
        app:layout_constraintEnd_toEndOf="@+id/category_science_computer">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_science_maths"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:id="@+id/cat_science_maths_iv"/>
        <TextView
            android:text="Science : Mathmetics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cat_science_maths_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="19"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cat_science_maths_iv"
            android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/category_item_bg"
        android:id="@+id/category_sports"
        app:layout_constraintStart_toStartOf="@+id/category_science_maths"
        app:layout_constraintEnd_toEndOf="@+id/category_science_maths" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/category_science_maths">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_sports"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:id="@+id/cat_sports_iv"/>
        <TextView
            android:text="Sports"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cat_sports_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="21"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cat_sports_iv"
            android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/category_item_bg"
        android:id="@+id/category_geography"
        app:layout_constraintStart_toStartOf="@+id/category_sports"
        app:layout_constraintEnd_toEndOf="@+id/category_sports"
        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/category_sports">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_geography"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:id="@+id/cat_geography_iv"/>
        <TextView
            android:text="Geography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cat_geography_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="22"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cat_geography_iv"
            android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/category_item_bg"
        android:id="@+id/category_animal"
        app:layout_constraintEnd_toEndOf="@+id/category_geography"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/category_geography"
        app:layout_constraintStart_toStartOf="@+id/category_geography">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_animal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:id="@+id/cat_animal_iv"/>
        <TextView
            android:text="Animal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cat_animal_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="27"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cat_animal_iv"
            android:layout_marginStart="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:text="Choose a category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="serif"
        android:textSize="28sp"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" android:padding="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>